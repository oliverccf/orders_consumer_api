{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Order Created Message",
  "description": "Schema for order created messages from external system",
  "required": ["externalId", "items"],
  "properties": {
    "externalId": {
      "type": "string",
      "description": "External system order identifier",
      "minLength": 1,
      "maxLength": 100
    },
    "items": {
      "type": "array",
      "description": "List of order items",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["productId", "productName", "unitPrice", "quantity"],
        "properties": {
          "productId": {
            "type": "string",
            "description": "Product identifier",
            "minLength": 1,
            "maxLength": 50
          },
          "productName": {
            "type": "string",
            "description": "Product name",
            "minLength": 1,
            "maxLength": 200
          },
          "unitPrice": {
            "type": "number",
            "description": "Unit price of the product",
            "minimum": 0,
            "multipleOf": 0.01
          },
          "quantity": {
            "type": "integer",
            "description": "Quantity of the product",
            "minimum": 1,
            "maximum": 10000
          }
        }
      }
    },
    "correlationId": {
      "type": "string",
      "description": "Correlation ID for tracking",
      "minLength": 1,
      "maxLength": 100
    }
  },
  "additionalProperties": false
}
